---
interface Props {
  name: string;
  slug: string;
  emoji: string;
  description: string;
  category: string;
  index: number;
}

const { name, slug, emoji, description, category, index } = Astro.props;

const categoryColors: Record<string, string> = {
  "Cibo": "from-orange-400 to-red-500",
  "Mestieri": "from-blue-400 to-indigo-500",
  "Oggetti": "from-emerald-400 to-teal-500",
  "Natura": "from-green-400 to-lime-500",
  "Corpo": "from-pink-400 to-rose-500",
  "Stati": "from-purple-400 to-violet-500",
  "Carte": "from-amber-400 to-yellow-500",
};

const gradient = categoryColors[category] || "from-gray-400 to-gray-500";
---

<a
  href={`/${encodeURIComponent(slug)}`}
  class="word-card group relative block rounded-2xl overflow-hidden bg-white shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2"
  style={`animation-delay: ${index * 50}ms`}
>
  <!-- Gradient overlay on hover -->
  <div class={`absolute inset-0 bg-gradient-to-br ${gradient} opacity-0 group-hover:opacity-10 transition-opacity duration-500`}></div>

  <!-- Category tag -->
  <div class="absolute top-3 right-3 z-10">
    <span class={`text-xs font-medium px-2.5 py-1 rounded-full bg-gradient-to-r ${gradient} text-white shadow-md`}>
      {category}
    </span>
  </div>

  <!-- Content -->
  <div class="p-6 pt-12">
    <!-- Emoji -->
    <div class="text-5xl mb-4 transform group-hover:scale-125 transition-transform duration-300">
      {emoji}
    </div>

    <!-- Title -->
    <h3 class="font-display text-xl font-bold text-gray-800 mb-2 group-hover:text-amber-600 transition-colors">
      {name}
    </h3>

    <!-- Description -->
    <p class="text-sm text-gray-500 line-clamp-2 mb-4">
      {description}
    </p>

    <!-- CTA -->
    <div class="flex items-center gap-2 text-sm font-medium text-amber-600 group-hover:text-amber-700">
      <span>Scopri le varianti</span>
      <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>

  <!-- Bottom gradient line -->
  <div class={`h-1 bg-gradient-to-r ${gradient} transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left`}></div>
</a>

<style>
  .word-card {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
